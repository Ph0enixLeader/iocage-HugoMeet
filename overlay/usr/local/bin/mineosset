#!/bin/sh

# Set configuration option in /etc/HugoMeet.conf
# Example use: sudo iocage set -P port=3000 sslmode=false mineos

give_message()
{
if [ $? -eq 0 ] ; then
    echo "Changing /etc/HugoMeet.conf"
else
    echo "Error updating /etc/HugoMeet.conf">2 ; exit 1
fi
}

case $1 in
    port) sed -i '' "s/^socket_port.*/socket_port = $2/" /etc/HugoMeet.conf
          give_message
          ;;
    sslmode) sed -i '' "s/^use_https.*/use_https = $2/" /etc/HugoMeet.conf
             give_message
             ;;
    *) echo "Unknown option">&2 ; exit 1
            ;;
esac

