#!/bin/sh

# Get configuration setting from HugoMeet configuration file
case $1 in
    port) echo `awk -F' = ' '/^socket_port/ { print $2 }' /etc/HugoMeet.conf`
          ;;
    sslmode) echo `awk -F' = ' '/^use_https/ { print $2 }' /etc/HugoMeet.conf`
             ;;
    scheme) sslmode=`awk -F' = ' '/^use_https/ { print $2 }' /etc/HugoMeet.conf`
            if [ $sslmode = "true" ] ; then echo "https"; else echo "http"; fi
            ;;
    *) echo "Unknown option">&2
       exit 1
       ;;
esac

